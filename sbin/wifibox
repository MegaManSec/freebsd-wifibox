#! /bin/sh
# shellcheck disable=SC3043

PREFIX=%%PREFIX%%
LOCALBASE=%%LOCALBASE%%
LOGDIR=/var/log/wifibox
RUNDIR=/var/run/wifibox
CONFDIR=${PREFIX}/etc/wifibox
PIDFILE=${RUNDIR}/pid
BHYVE_LOG=${LOGDIR}/bhyve.log
GRUB_BHYVE_LOG=${LOGDIR}/grub-bhyve.log

: "${BHYVE:=/usr/sbin/bhyve}"
: "${BHYVECTL:=/usr/sbin/bhyvectl}"
: "${DEVCTL:=/usr/sbin/devctl}"
: "${IFCONFIG:=/sbin/ifconfig}"
: "${SYSCTL:=/sbin/sysctl}"
: "${DHCLIENT:=/sbin/dhclient}"
: "${KLDLOAD:=/sbin/kldload}"
: "${KLDUNLOAD:=/sbin/kldunload}"

: "${ECHO:=/bin/echo}"
: "${PRINTF:=/usr/bin/printf}"
: "${SLEEP:=/bin/sleep}"
: "${PGREP:=/bin/pgrep}"
: "${KILL:=/bin/kill}"
: "${RM:=/bin/rm}"

: "${GRUB_BHYVE:=${LOCALBASE}/sbin/grub-bhyve}"

check_virtfs() {
    if ! (${BHYVE} -s help | grep -Fq virtio-9p); then
	${ECHO} "ERROR: The Virtio 9p (VirtFS) bhyve interface is not available."
	exit 127
    fi
}

sysctl_value() {
    ${SYSCTL} -nq "$1"
}

# shellcheck disable=SC2046
check_iommu() {
    local _iommu
    local _amdvi

    _iommu=$(sysctl_value "hw.vmm.iommu.enable") || ${ECHO} "0"
    _amdvi=$(sysctl_value "hw.vmm.amdvi.enable") || ${ECHO} "0"

    if [ "${_iommu}" -eq "0" ] && [ "${_amdvi}" -eq "0" ]; then
	${ECHO} "ERROR: PCI pass-through is not available for bhyve."
	exit 127
    fi
}

check_configuration() {
    local _file="$1"

    if [ ! -f "${_file}" ]; then
	${ECHO} "ERROR: ${_file} is missing, please create it from the sample."
	exit 3
    fi
}

create_interfaces() {
    ${IFCONFIG} bridge create name bridge-wifibox up > /dev/null
    ${IFCONFIG} tap create name tap-wifibox > /dev/null
    ${IFCONFIG} bridge-wifibox addm tap-wifibox > /dev/null
}

destroy_interfaces() {
    ${IFCONFIG} bridge-wifibox destroy > /dev/null
    ${IFCONFIG} tap-wifibox destroy > /dev/null
}

get_ppt_device() {
    check_configuration "${CONFDIR}/bhyve.conf"

    # shellcheck source=./etc/bhyve.conf.sample
    . "${CONFDIR}/bhyve.conf"

    ${ECHO} "pci${passthru}" | sed 's!/!:!g'
}

vm_start() {
    check_configuration "${CONFDIR}/bhyve.conf"
    check_configuration "${CONFDIR}/interfaces.conf"
    check_configuration "${CONFDIR}/udhcpd.conf"
    check_configuration "${CONFDIR}/wpa_supplicant.conf"

    # shellcheck source=./etc/bhyve.conf.sample
    . "${CONFDIR}/bhyve.conf"

    ${DEVCTL} set driver -f "$(get_ppt_device)" ppt > /dev/null
    ${GRUB_BHYVE} -S -M "${memory}" -r host \
		  -m ${PREFIX}/share/wifibox/device.map \
		  -d ${PREFIX}/share/wifibox \
		  wifibox > ${GRUB_BHYVE_LOG} 2>&1
    ${BHYVE} -c "${cpus}" -m "${memory}" -AHP -u -S \
	     -s 0,hostbridge \
	     -s 31,lpc \
	     -s 4:0,virtio-blk,${PREFIX}/share/wifibox/disk.img \
	     -s 4:1,virtio-9p,config=${CONFDIR},ro \
	     -s 4:2,virtio-9p,var=${RUNDIR}/appliance \
	     -s 5:0,e1000,tap-wifibox \
	     -s 6:0,passthru,"${passthru}" \
	     wifibox > ${BHYVE_LOG} 2>&1 &
    # Give some time for bhyve to launch.
    ${SLEEP} 1 > /dev/null
    ${PGREP} -fx "bhyve[: ].* wifibox" > ${PIDFILE} 2>&1

    if [ -f "$(cat ${PIDFILE})" ]; then
	destroy_interfaces
	${ECHO} "ERROR: Guest could not be started, check the contents of ${BHYVE_LOG}."
	exit 4
    fi
}

vm_stop() {
    ${KILL} -SIGTERM "$(cat ${PIDFILE})" > /dev/null
    ${SLEEP} 3 > /dev/null
    ${BHYVECTL} --force-poweroff --vm=wifibox >> ${BHYVE_LOG} 2>&1
    ${BHYVECTL} --destroy --vm=wifibox >> ${BHYVE_LOG} 2>&1
    ${SLEEP} 1 > /dev/null
    ${DEVCTL} clear driver -f "$(get_ppt_device)" > /dev/null
}

assert_vm_runs() {
    if [ ! -f "${PIDFILE}" ]; then
	${ECHO} "${PIDFILE} does not exist -- is not wifibox running?"
	exit 1
    fi
}

show_progress() {
    ${PRINTF} "."
}

wifibox_start() {
    if [ -f "${PIDFILE}" ]; then
	${ECHO} "${PIDFILE} already exists -- is wifibox running?"
	exit 1
    fi

    ${PRINTF} "Launching wifibox"

    create_interfaces
    show_progress

    vm_start
    show_progress

    # Give some more time for the guest to boot up.
    ${SLEEP} 2 > /dev/null
    ${ECHO} "OK"

    ${DHCLIENT} bridge-wifibox
}

wifibox_stop() {
    assert_vm_runs

    ${PRINTF} "Stopping wifibox"

    vm_stop
    show_progress

    destroy_interfaces
    show_progress

    ${RM} ${PIDFILE} > /dev/null
    ${ECHO} "OK"
}

# This is a workaround to recover from the unfortunate state of the
# wireless device after resume.
kick_vmm() {
    if ! ${KLDUNLOAD} vmm; then
	${ECHO} "ERROR: Some bhyve guests are still running, vmm.ko could not be unloaded."
	exit 127
    fi
    ${KLDLOAD} vmm
}

wifibox_resume() {
    assert_vm_runs

    ${PRINTF} "Resuming wifibox"

    vm_stop
    show_progress

    ${SLEEP} 1
    kick_vmm
    show_progress

    vm_start
    ${ECHO} "OK"
}

wifibox_restart() {
    wifibox_stop
    wifibox_start
}

wifibox_status() {
    if [ -f "${PIDFILE}" ]; then
	${ECHO} "wifibox is running as pid $(cat ${PIDFILE})."
    else
	${ECHO} "wifibox is not running."
	return 1
    fi
}

check_iommu
check_virtfs

case "$1" in
    start) wifibox_start;;
    stop) wifibox_stop;;
    resume) wifibox_resume;;
    restart) wifibox_restart;;
    status) wifibox_status;;
    *) ${ECHO} "USAGE: $0 start | stop | restart | resume | status" ;;
esac
